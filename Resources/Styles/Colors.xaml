<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Colores principales -->
    <Color x:Key="Primary">#22223B</Color>
    <!-- Azul oscuro, buen contraste -->
    <Color x:Key="Accent">#F2E9E4</Color>
    <!-- Fondo claro, casi blanco -->
    <Color x:Key="TextPrimary">#111111</Color>
    <!-- Negro casi puro -->
    <Color x:Key="TextSecondary">#555555</Color>
    <!-- Gris oscuro para secundario -->
    <Color x:Key="Background">#FFFFFF</Color>
    <!-- Fondo blanco puro -->
    <Color x:Key="Surface">#F8F9FA</Color>


    <!-- Estados -->
    <Color x:Key="Success">#198754</Color>
    <Color x:Key="Error">#DC3545</Color>
    <Color x:Key="Warning">#FFC107</Color>
</ResourceDictionary>
